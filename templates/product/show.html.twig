{% extends 'base.html.twig' %}

{% block title %}
	{{product.name}}
{% endblock %}

{% block body %}
	<div
		class="container-xxl">

		{# Breadcrumb #}
		<nav class='d-none d-md-block' aria-label="breadcrumb">
			<ol class="breadcrumb my-2">
				<li class="breadcrumb-item">
					<a class='p-2' href="{{path('app_home')}}">
						<i class="fa-solid fa-house"></i>
					</a>
				</li>
				<li class="breadcrumb-item">
					<a class="text-decoration-none" href="{{path('app_category_index')}}">Catégorie</a>
				</li>
				{% for link in breadcrumbLinks %}
					<li class="breadcrumb-item">
						<a class='text-decoration-none' href="{{path('app_category_show', {'url': link.url})}}">{{link.name}}</a>
					</li>
				{% endfor %}
				<li class="breadcrumb-item active" aria-current='page'>{{product.name}}</li>
			</ol>
		</nav>

		<div class="d-flex gap-3 my-2 mt-md-0 align-items-center">
			<a class='p-1' href="{{path('app_category_show', {'url': product.category.url})}}">
				<i class="fa-solid fa-arrow-left fs-2 mt-1"></i>
			</a>
			<h1 class='m-0 fw-light'>
				{{product.brand}}
				{{product.name}}
			</h1>
		</div>

		{# Product #}
		<div
			class="d-flex flex-column flex-md-row gap-4 align-items-center align-items-md-start mt-4">
			{# image #}
			<div class="col-12 col-md-4">
				<img class='img-fluid' src="https://thumbs.static-thomann.de/thumb/padthumb600x600/pics/bdb/561026/18011037_800.jpg" alt="{{product.name}}">
			</div>

			{# Description #}
			<div class="flex-fill">
				<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Reiciendis temporibus distinctio eos tempore quo minima atque eius, cum obcaecati possimus consequuntur ex neque aut dignissimos facere! Enim quas maiores neque.</p>
			</div>


			<form class='col-3 d-none d-md-flex flex-column align-items-center border p-3 gap-3' method='POST' action="{{path('app_cart_add_item')}}">
				<span class='fs-1 fw-bold'>{{product.price}}€</span>
				<span class="fw-light text-success">Disponible</span>
				<div class="col-12 d-flex align-items-center">
					<label class='form-label pe-3 m-0' for="quantity">Quantité:</label>
					<select class='form-control' name="quantity">
						{% for i in 1..100 %}
							<option value="{{i}}">{{i}}</option>
						{% endfor %}
					</select>
				</div>
				<input type="hidden" name="id" value='{{product.id}}'>
				<input class='col-12 btn btn-accent' type="submit" value="Ajouter au panier">
			</form>

			<div class="d-flex d-md-none align-items-center justify-content-between p-2 gap-2 bg-primary flex-wrap fixed-bottom">
				<span class="fs-3 fw-bold text-light">
					{{product.price}}
					€
				</span>
				<form action="{{path('app_cart_add_item')}}" method="POST" class="d-flex align-items-center gap-2">
					<label class='text-light' for="quantity">Quantité</label>
					<select class='form-control' name="quantity" id="quantity_sm">
						{% for i in 1..100 %}
							<option value="{{i}}">{{i}}</option>
						{% endfor %}
					</select>
					<input type="hidden" name="id" value='{{product.id}}'>
					<input class='btn btn-accent' type="submit" value="Ajouter au panier">
				</form>
			</div>
		</div>
	</div>
</div>{% endblock %}
