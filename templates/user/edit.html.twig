{% extends "base.html.twig" %}

{% block title %}Modifier mes informations
{% endblock %}

{% block body %}
	<div
		class="container-xxl p-0">

		{# Breadcumbs for large device #}
		<nav class='d-none d-md-block' aria-label="breadcrumb">
			<ol class="breadcrumb my-2">
				<li class="breadcrumb-item">
					<a class='p-2' href="{{path('app_home')}}">
						<span class="material-symbols-outlined">
							home
						</span>
					</a>
				</li>
				<li class="breadcrumb-item">
					<a class='text-decoration-none' href="{{path('app_user')}}">Mon compte</a>
				</li>
				<li class="breadcrumb-item">
					<a class='text-decoration-none' href="{{path('app_user_info')}}">Mes informations</a>
				</li>
				<li class="breadcrumb-item active" aria-current='page'>
					Modifier mes informations
				</li>
			</ol>
		</nav>

		{# heading #}
		<div class="d-flex align-items-center gap-2">
			<a class='d-flex p-2 text-decoration-none' href="{{path('app_user_info')}}">
				<span class="material-symbols-outlined fs-1">
					arrow_back
				</span>
			</a>
			<h1 class="my-3">Modifier mes informations</h1>
		</div>

		{# form #}
		{{form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'd-flex flex-column gap-3 px-2 col-md-6 mx-auto mt-md-4'}})}}
		<div class='d-flex align-items-center gap-3'>
			<span class="material-symbols-outlined ms-2">
				account_circle
			</span>
			<div class="form-floating flex-fill">
				{{form_widget(form.firstname, {'attr': {'placeholder':'Prénom', 'class': 'border-primary'}})}}
				{{form_label(form.firstname, 'Prénom')}}
				{{form_help(form.firstname)}}
				{{form_errors(form.firstname)}}
			</div>
		</div>
		<div class='d-flex align-items-center gap-3'>
			<span class="material-symbols-outlined ms-2">
				account_circle
			</span>
			<div class="form-floating flex-fill">
				{{form_widget(form.lastname, {'attr': {'placeholder':'Nom', 'class': 'border-primary'}})}}
				{{form_label(form.lastname, 'Nom')}}
				{{form_help(form.lastname)}}
				{{form_errors(form.lastname)}}
			</div>
		</div>
		<div class='d-flex align-items-center gap-3'>
			<span class="material-symbols-outlined ms-2">
				call
			</span>
			<div class="form-floating flex-fill">
				{{form_widget(form.phone, {'attr': {'placeholder':'Téléphone', 'class': 'border-primary'}})}}
				{{form_label(form.phone, 'Téléphone')}}
				{{form_help(form.phone)}}
				{{form_errors(form.phone)}}
			</div>
		</div>
		{{ form_rest(form) }}
		<div class='d-flex justify-content-end gap-2'>
			<a class='link-danger text-decoration-none py-2 px-4' href="{{path('app_user_info')}}">Retour</a>
			<input class='btn btn-accent rounded-pill py-2 px-4' type="submit" value='Modifier'>
		</div>
		{{form_end(form)}}


	</div>
{% endblock %}
