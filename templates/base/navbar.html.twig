{% block body %}
	<header class="sticky-top">
		<nav class="navbar navbar-expand-md shadow-sm bg-primary blur bg-opacity-90">
			<div class="container-xxl d-flex gap-2">
				<a class="navbar-brand d-none d-md-block text-light fw-bold" href="{{path('app_home')}}">Village Green</a>
				<div class="flex-fill d-flex flex-column gap-2">
					<div class="d-flex d-md-none justify-content-between align-items-center">
						<button class="btn text-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNav" aria-controls="offcanvasNav" aria-expanded="false" aria-label="Toggle navigation">
							<i class="fa-solid fa-bars fa-xl"></i>
						</button>
						<a class="text-light fs-3 text-decoration-none fw-bold" href="{{path('app_home')}}">Village Green</a>
						<div class="d-flex align-items-center gap-2">
							<a class="px-3 py-2 text-decoration-none bg-light rounded-pill" href="{{path('app_cart')}}">
								<i class="fa-solid fa-bag-shopping fa-xl me-2"></i>
								{{cartCount}}
							</a>
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<a class='text-light p-2' href="{{path('app_user')}}">
									<i class="fa-solid fa-user fa-xl"></i>
								</a>
							{% else %}
								<a class="text-light p-2" href="{{path('app_login')}}">
									<i class="fa-solid fa-user fa-xl"></i>
								</a>
							{% endif %}
						</div>
					</div>
					<div class="d-flex justify-content-between align-items center gap-4">
						<form class="flex-fill">
							<input class="form-control rounded-pill py-2 blur-dark text-light border-0" type="search">
						</form>
						<div class="d-none d-md-flex align-items-center gap-4">
							<a class="text-decoration-none fw-medium text-light" href="{{path('app_cart')}}">
								<i class="fa-solid fa-bag-shopping"></i>
								Panier ({{cartCount}})
							</a>
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<div class="dropdown">
									<a class="text-decoration-none fw-medium text-light" href="#" role='button' data-bs-toggle='dropdown' aria-expanded='false'>
										<i class="fa-solid fa-user"></i>
										{{app.user.email}}
									</a>
									<ul class="dropdown-menu dropdown-menu-end">
										<li class="dropdown-item">
											<a href="{{path('app_user')}}" class="text-decoration-none">Votre profil</a>
										</li>
										<li class="dropdown-item">
											<a href="{{path('app_logout')}}" class="text-decoration-none">DÃ©connexion</a>
										</li>
									</ul>
								</div>
							{% else %}
								<div class="dropdown">
									<a class="text-decoration-none fw-medium text-light" href="#" role='button' data-bs-toggle='dropdown' aria-expanded='false'>
										<i class="fa-solid fa-user"></i>
										Connexion / Inscription
									</a>
									<ul class="dropdown-menu dropdown-menu-end">
										<li class='dropdown-item'>
											<a class='text-decoration-none' href="{{path('app_login')}}">Connexion</a>
										</li>
										<li class='dropdown-item'>
											<a class='text-decoration-none' href="{{path('app_register')}}">Inscription</a>
										</li>
									</ul>
								</div>
							{% endif %}
						</div>
					</div>
					<div class="d-none d-md-flex align-items-center m-0 p-0 gap-2">
						<button class="btn btn-menu rounded-pill fw-medium" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNav" aria-controls="offcanvasNav" aria-expanded="false" aria-label="Toggle navigation">
							<i class="fa-solid fa-bars me-2"></i>Menu
						</button>
						{% for navCat in navCategories %}
							<a class="btn btn-outline-light border-0 rounded-pill fw-medium" href="{{path('app_category_show', {'url': navCat.url})}}">{{navCat.name}}</a>
						{% endfor %}
					</div>

				</div>
			</div>
		</nav>
		<nav id="offcanvasNav" class="offcanvas offcanvas-start bg-background" tabindex="-1">
			<div class="offcanvas-header py-4">
				<a class="fs-3 fw-bold text-decoration-none" href="{{path('app_home')}}">Village Green</a>
				<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
			</div>
			<div class="offcanvas-body d-flex flex-column gap-2">
				{% for cat in categories %}
					<a class="fs-5 fw-medium text-decoration-none" href="{{path('app_category_show', {'url': cat.url})}}">{{cat.name}}</a>
				{% endfor %}
			</div>
		</nav>
	</header>

{% endblock %}
