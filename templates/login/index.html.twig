{% extends 'base.html.twig' %}

{% block body %}
	<div class="container flex-fill d-flex justify-content-center align-items-center py-2">
		<div class="col-12 col-md-6 p-2 p-md-4 rounded-4 border border-primary bg-light">
			<h1 class='text-center mb-4'>Se connecter</h1>
			{% if error %}
				<div class='text-center'>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<form class='d-flex flex-column align-items-center gap-3 col-12' action="{{ path('app_login') }}" method="post" novalidate>
				<div class='col-12'>
					<label class='form-label mb-1 ms-2' for="username">Email</label>
					<input class='form-control rounded-3 px-3 py-2' type="text" id="username" name="_username" value="{{ last_username }}">
				</div>

				<div class='col-12'>
					<label class='form-label mb-1 ms-2' for="password">Mot de passe</label>
					<input class='form-control rounded-3 px-3 py-2' type="password" id="password" name="_password">
					<a class='small text-decoration-none ms-2' href="#">Mot de passe oublié ?</a>
				</div>

				<div class='col-12'>
					<input class='form-check-input m-1' type="checkbox" id='_remember_me' name="_remember_me"/>
					<label class='form-check-label' for='_remember_me'>Rester connecté.e</label>
				</div>

				<input type="hidden" name="_target_path" value="/">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<button class='btn btn-accent rounded-pill col-12 col-md-6 mb-1' type="submit">Connexion</button>
			</form>

			<div class="mt-3 text-center">
				<p class='m-0'>Vous avez pas de compte ?</p>
				<a class='text-decoration-none fw-bold' href="{{path('app_register')}}">Créer un compte</a>
			</div>
		</div>
	</div>
{% endblock %}
